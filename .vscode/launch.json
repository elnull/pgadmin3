    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "pgAdmin3",
            "program": "${workspaceRoot}/build/pgAdmin3",
            "request": "launch",
            "stopAtEntry": false,
            "type": "cppdbg",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}/build",
            "setupCommands":[
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
        }
    ]
}